<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Weather App</title>
    <style>
        table {
            border-collapse: collapse;
            width: 50%;
            margin: 20px auto;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand">My Weather App</a>
          <form class="d-flex" action="/submit" method="POST">
            <input class="form-control me-2" type="text" placeholder="Search" aria-label="Search" id="message" name="message">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </nav>

      {% if data %}
      <table>
          <tr>
            <th>Location</th>
            <th>Temperature (&deg;C)</th>
            <th>Condition</th>
            <th>Humidity</th>
            <th>Wind (km/h)</th>
            <th>Pressure (mb)</th>
            <th>Precipitation (mm)</th>
          </tr>
          <tr>
              <td>{{ data['location']['name'] }}</td>
              <td>{{ data['current']['temp_c'] }}</td>
              <td>{{ data['current']['condition']['text'] }}</td>
              <td>{{ data['current']['humidity'] }}%</td>
              <td>{{ data['current']['wind_kph'] }}</td>
              <td>{{ data['current']['pressure_mb'] }}</td>
              <td>{{ data['current']['precip_mm'] }}</td>
              <!-- Aggiungi altri valori dei campi se nece
          </tr>
      </table>
  {% endif %}

    

  </body>
</html>